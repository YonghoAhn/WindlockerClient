<Page x:Class="WindlockerClient.Pages.UpdatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindlockerClient.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="450"
      Title="UpdatePage">

    <Grid Background="White">
        <StackPanel>
            <Label Content="버전 및 업데이트" Margin="10,10,0,0" FontSize="22" FontFamily="/WindlockerClient;component/Resources/#NanumBarunGothic Light" />
            <Label Content="현재 Windlocker 버전 : v1.0.000" Margin="20,10,0,0" />
            <Label Content="최신 Windlocker 버전 : v1.0.000" Margin="20,5,0,0" />
        </StackPanel>
        <Image VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,20,30,0" Source="/WindlockerClient;component/img/LogoBlack.png" Width="130"  />
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,30">
            <Label Content="현재 Windlocker 최신 버전입니다." FontFamily="/WindlockerClient;component/Resources/#NanumBarunGothic Light" FontSize="14" />
            <Button Content="업데이트 수동 확인" Width="135" Background="#FF15AFDC" Foreground="White" Height="30"/>
        </StackPanel>
    </Grid>
</Page>
